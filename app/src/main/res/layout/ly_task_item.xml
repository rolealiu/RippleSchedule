<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/selector_task_item"
        android:paddingBottom="18dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingTop="18dp" >

        <ImageView
            android:id="@+id/iv_task_item_progress"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/img_task_90" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/iv_task_item_progress"
            android:layout_toRightOf="@id/iv_task_item_progress"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_task_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="190dp"
                android:singleLine="true"
                android:text="完成RippleSchedule"
                android:textColor="@color/clr_task_title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_task_item_remainTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="剩下3天18小时27分钟"
                android:textColor="@color/clr_task_remainTime"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/img_task_detail" />
    </RelativeLayout>

</FrameLayout>